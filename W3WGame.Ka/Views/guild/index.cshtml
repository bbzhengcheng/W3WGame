@using W3WGame.Core.Dtos.Web
@using W3WGame.Services.ToolCode
@using WangFramework.MvcPager
@{
    Layout = "~/Views/Shared/_WebLayout.cshtml";
    var randlist = ViewData["randlist"] as List<NewsKaDto>;
    int i = 1;
}
@model WangFramework.MvcPager.PagedList<NewsKaDto>
<div class="main-mod">
    <!--页面模块·面包屑-->
    <div class="crumbs">
        <a href="http://ka.9game.cn/">九游发号中心</a> &gt; 公会礼包
    </div>
    <!-- main begin -->
    <!-- breadcrumb end -->
    <div class="main cf">
        <!-- left -->
        <div class="fl-l">
            <div class="sidebar">
                <div class="rank-title">
                    <h2 class="title-con">
                        <span class="all-ico"></span>全部公会礼包</h2>
                    <div class="sub-seach">
                        <form action="/guild/index">
                        <input type="text" name="title" id="sceneName" value="" class="seachInputc">
                        
                        <input type="submit" class="seachbtnc" value="搜索">
                        </form>
                    </div>
                </div>
                <!-- con -->
                <div class="in-Number">
                    <ul class="sub-tab">
                        <li class="two"><a href="#" class="current">公会卡</a> </li>
                        <li class="two"><a href="/code/" class="">新服礼包</a> </li>
                        <li class="two"><a href="/vip/" class="">特权礼包</a> </li>
                        <li class="two"><a href="/code/" class="">激活码</a> </li>
                    </ul>
                    <ul class="recont-list cf">
                        @foreach (var item in Model)
                        {
                            <li>
                                <div class="radius120">
                                    <a href="#">
                                        <img src="@WebHelper.GetImg(item.ImgPath)" alt="">
                                        <span class="radius-mask"></span></a>
                                </div>
                                <a href="#"><strong class="state-title">[@item.GameName]@item.KaTitle</strong></a>
                                <p class="state">
                                    <!-- 个人 -->
                                    @item.Shengyu
                                    <!-- 正常场景计算剩余率 -->
                                </p>
                                <a href="#" class="btn60-green">领号 </a></li>
                        }
                    </ul>
                </div>
                <!-- page -->
                <div class="page page-key">
                    @Html.Pager(Model)
                </div>
            </div>
        </div>
        <!-- right -->
        <div class="fl-r">
            <div class="rank-box cloumn-bar">
                <div class="rank-title">
                    <h2 class="title-con">
                        今日公会礼包排行榜</h2>
                </div>
                <ul class="rank-con cf">
                      @foreach (var item in randlist)
                      {
                        <li><span class="num">@(i++)</span> <a href="/personal/1410761537395811760.html"
                            class="matter">[@item.GameName]@item.KaTitle</a> <span class="gift-tao"></span>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <!-- main end -->
</div>
