@using W3WGame.Admin.Controllers
<!DOCTYPE html>
<html>
<head>
    <title>管理平台</title>
    <link href="../../Scripts/jquery-ligerUI-1.1.9/ligerUI/skins/Aqua/css/ligerui-all.css"
        rel="stylesheet" type="text/css" />
    <script src="../../Scripts/jquery-ligerUI-1.1.9/jquery/jquery-1.3.2.min.js" type="text/javascript"></script>
    <script src="../../Scripts/jquery-ligerUI-1.1.9/ligerUI/js/ligerui.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        var tab = null;
        var tree = null;
        $(function () {

            //布局
            $("#layout1").ligerLayout({ leftWidth: 190, height: '100%', heightDiff: 0, space: 4, onHeightChanged: f_heightChanged });

            var height = $(".l-layout-center").height();

            //Tab
            $("#framecenter").ligerTab({ height: height });

            $(".l-link").hover(function () {
                $(this).addClass("l-link-over");
            }, function () {
                $(this).removeClass("l-link-over");
            });

            //树
            $("#treeMenu").ligerTree({ checkbox: false });
            $("#treeMenu2").ligerTree({ checkbox: false });
            $("#treeTab").ligerTab();
            tab = $("#framecenter").ligerGetTabManager();
            tree = $("#treeMenu").ligerGetTreeManager();
            $("#pageloading").hide();

        });
        function f_heightChanged(options) {
            if (tab)
                tab.addHeight(options.diff);
        } 
    </script>
    <style type="text/css">
        body, html
        {
            height: 100%;
        }
        body
        {
            padding: 0px;
            margin: 0;
            overflow: hidden;
        }
        .l-link
        {
            display: block;
            height: 26px;
            line-height: 26px;
            padding-left: 10px;
            text-decoration: underline;
            color: #333;
        }
        .l-link2
        {
            text-decoration: underline;
            color: white;
            margin-left: 2px;
            margin-right: 2px;
        }
        .l-layout-top
        {
            background: #102A49;
            color: White;
        }
        .l-layout-bottom
        {
            background: #E5EDEF;
            text-align: center;
        }
        #pageloading
        {
            position: absolute;
            left: 0px;
            top: 0px;
            background: white url('../../Scripts/jquery-ligerUI-1.1.9/Images/loading.gif') no-repeat center;
            width: 100%;
            height: 100%;
            z-index: 99999;
        }
        .l-link
        {
            display: block;
            line-height: 22px;
            height: 22px;
            padding-left: 16px;
            border: 1px solid white;
            margin: 4px;
        }
        .l-link-over
        {
            background: #FFEEAC;
            border: 1px solid #DB9F00;
        }
        .l-winbar
        {
            background: #2B5A76;
            height: 30px;
            position: absolute;
            left: 0px;
            bottom: 0px;
            width: 100%;
            z-index: 99999;
        }
        .space
        {
            color: #E7E7E7;
        }
        /* 顶部 */
        .l-topmenu
        {
            margin: 0;
            padding: 0;
            height: 30px;
            line-height: 30px;
            background-color: #1D438B;
            position: relative;
            border-top: 1px solid #1D438B;
        }
        .l-topmenu-logo
        {
            color: #E7E7E7;
            padding-left: 35px;
            line-height: 26px;
            background: url('../../Scripts/jquery-ligerUI-1.1.9/Images/topicon.gif') no-repeat 10px 5px;
        }
        .l-topmenu-welcome
        {
            position: absolute;
            height: 24px;
            line-height: 24px;
            right: 30px;
            top: 2px;
            color: #070A0C;
        }
        .l-topmenu-welcome a
        {
            color: #E7E7E7;
            text-decoration: underline;
        }
    </style>
</head>
<body style="padding: 0px; background: #EAEEF5;">
    <div id="pageloading">
    </div>
    <div id="topmenu" class="l-topmenu">
        <div class="l-topmenu-logo">
            <h3>
                后台管理平台</h3>
        </div>
        <div class="l-topmenu-welcome">
            <label style="color: white">
                <b>@FormsAuthService.GetCurrentIdentity().Name</b>, 欢迎您回来
            </label>
            &nbsp;&nbsp; 
            <a href="@Url.Action("CheckPassword", "AdminUsers")" target="home" class="l-link2">修改密码</a>
            <a href="@Url.Action("LogOut", "Account")" class="l-link2">安全退出</a>
        </div>
    </div>
    <div id="layout1" style="width: 99.2%; margin: 0 auto; margin-top: 4px;">
        <div position="left" title="系统菜单">
            @Html.Action("Menu", "Home")
        </div>
        <div position="center" id="framecenter">
            <div tabid="home" title="内容区域" style="height: 300px">
                <iframe frameborder="0" scrolling="auto" name="home" id="home" src="">
                </iframe>
            </div>
        </div>
    </div>
    <div style="height: 32px; line-height: 32px; text-align: center;">
    </div>
    <div style="display: none">
    </div>
</body>
</html>
