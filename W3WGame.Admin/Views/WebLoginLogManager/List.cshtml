@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "网站登录日志管理";
}
@model WangFramework.MvcPager.PagedList<W3WGame.Core.Entities.WebLoginLog>
<link href="../../Scripts/colorbox/colorbox.css" rel="stylesheet" type="text/css" />
<link href="../../Scripts/colorbox/colorbox.css" rel="stylesheet" type="text/css" />
<script src="../../Scripts/jquery-1.7.1.min.js" type="text/javascript"></script>
<script src="../../Scripts/colorbox/jquery.colorbox-min.js" type="text/javascript"></script>
<script src="../../Scripts/AdminCommon.js" type="text/javascript"></script>
<script src="../../Scripts/My97DatePicker/WdatePicker.js" type="text/javascript"></script>
<script type="text/javascript">
    $(function () {
        $(".box").colorbox({
            iframe: true,
            width: 550,
            height: 550,
            onClosed: function () {
                window.location.reload();
            }
        });
    });
</script>
<div class="right_box_card">
    <ul>
        <li class="right_box_card1"><a href="@Url.Action("List", "WebLoginLogManager")">网站登录日志管理</a></li>
    </ul>
</div>
<div style="line-height: 40px;">
    <p class="avatar_btn">
       
    </p>
</div>
<div>
    @using (Html.BeginForm("List", "WebLoginLogManager", FormMethod.Get))
    {
        <table class="right_box_tab" style="margin-top: 10px;" width="100%" border="0" cellspacing="0"
            cellpadding="0">
            <tr height="40px">
                <td>
                   游戏ID：@Html.TextBox("gameid", ViewData["gameid"], new { @class = "text-input" })
                </td>
                <td>
                    服务器ID：@Html.TextBox("serverid", ViewData["serverid"], new { @class = "text-input" })
                </td>
                 <td>
                    <input type="submit" value="查找" class="submit" style="float: left; width: 80px;" />
                </td>
            </tr>
        </table>
    }
</div>
<table class="right_box_tab" style="margin-top: 10px;" width="100%" border="0" cellspacing="0"
    cellpadding="0">
    <tr height="30" class="tab_title">
        <td>
            ID
        </td>
        <td>
            账号
        </td>
        <td>
            登录时间
        </td>
        <td>
            登陆IP
        </td>
        <td>
            操作
        </td>
    </tr>
    @foreach (var item in Model)
    {
        <tr height="35" class="tab_td1">
            <td>
                @item.ID
            </td>
            <td>
                @item.Account
            </td>
            <td>
                @item.LoginDate
            </td>
            <td>
                @item.IP
            </td>
            <td>
                
                <a href="#" onclick="DeletePost('/WebLoginLogManager/Delete', { id: @item.ID})">删除</a>
            </td>
        </tr>
    }
</table>
<div style="padding: 10px;">
    @Html.Pager(Model)
</div>
