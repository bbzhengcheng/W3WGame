@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "新闻管理";
}
@model WangFramework.MvcPager.PagedList<W3WGame.Core.Entities.AccountInfo>
<link href="../../Scripts/colorbox/colorbox.css" rel="stylesheet" type="text/css" />
<link href="../../Scripts/colorbox/colorbox.css" rel="stylesheet" type="text/css" />
<script src="../../Scripts/jquery-1.7.1.min.js" type="text/javascript"></script>
<script src="../../Scripts/colorbox/jquery.colorbox-min.js" type="text/javascript"></script>
<script src="../../Scripts/AdminCommon.js" type="text/javascript"></script>
<script src="../../Scripts/My97DatePicker/WdatePicker.js" type="text/javascript"></script>

<script type="text/javascript">
    $(function () {
        $(".box").colorbox({
            iframe: true,
            width: 550,
            height: 550,
            onClosed: function () {
                window.location.reload();
            }
        });
    });
</script>
<div class="right_box_card">
    <ul>
        <li class="right_box_card1"><a href="@Url.Action("List", "AccountInfoManager")">用户列表</a></li>
       
    </ul>
</div>
<div style="line-height: 40px;">
    <p class="avatar_btn">
     
    </p>
</div>
<div>
    @using (Html.BeginForm("List", "AccountInfoManager", FormMethod.Get))
    {
        <table class="right_box_tab" style="margin-top: 10px;" width="100%" border="0" cellspacing="0"
            cellpadding="0">
            <tr height="40px">
                <td>
                    关键词：@Html.DropDownList("selecttype", new List<SelectListItem>
                                           {
                                              new SelectListItem{Selected = false,Text = "账号",Value = "Account"},
                                              new SelectListItem{Selected = true,Text = "昵称",Value = "NickName"},
                                              
                                           })&nbsp;&nbsp;@Html.TextBox("keyword", ViewData["keyword"], new { @class = "text-input" })
                </td>
                <td>
                   创建日期:开始时间 @Html.TextBox("startdate", ViewData["startdate"],  new { @class = "text-input", onfocus = "WdatePicker({dateFmt:'yyyy-MM-dd HH:mm:ss'})" })-@Html.TextBox("enddate", ViewData["enddate"], new { @class = "text-input", onfocus = "WdatePicker({dateFmt:'yyyy-MM-dd HH:mm:ss'})" })
                </td>
                <td>
                    <input type="submit" value="查找" class="submit" style="float: left; width: 80px;" />
                </td>
            </tr>
           
        </table>
    }
</div>
<table class="right_box_tab" style="margin-top: 10px;" width="100%" border="0" cellspacing="0"
    cellpadding="0">
    <tr height="30" class="tab_title">
        <td>
            ID
        </td>
        <td>
            账号
        </td>
        <td>
            密码
        </td>
        <td>
            昵称
        </td>
        <td>
            注册日期
        </td>
        <td>
            注册IP
        </td>
        <td>
            IP地址
        </td>
        <td>
            QQ
        </td>
        <td>
            邮箱
        </td>
        <td>
            手机号码
        </td>
        @*<td>
            操作
        </td>*@
    </tr>
    @foreach (var item in Model)
    {
        <tr height="35" class="tab_td1">
            <td>
                @item.ID
            </td>
            <td>
                @item.Account
            </td>
            <td>
                @item.Password
            </td>
            <td>
                @item.NickName
            </td>
            <td>
                @item.RegDate
            </td>
            <td>
                @item.RegIP
            </td>
            <td>
                @item.IPAddress
            </td>
            <td>
                @item.QQ
            </td>
            <td>
                @item.Email
            </td>
            <td>
                @item.Phone
            </td>
            <td>
              @*  @Html.ActionLink("修改", "Save", "AccountInfoManager", new { id = item.ID }, new { @class = "box" })
                <a href="#" onclick="DeletePost('/AccountInfoManager/Delete', { id: @item.ID})">删除</a>*@
            </td>
        </tr>
    }
</table>
<div style="padding: 10px;">
    @Html.Pager(Model)
</div>
