<div class="main">
    <div class="header" style="font-size: 25px; text-align: center; font-weight: bold;  margin-bottom: 20px;">
            W3WGame Admin Logon 
    </div>
	<div class="content">
		<div class="title hide">用户登陆</div>
		  @using (Html.BeginForm("LogOn", "Account", FormMethod.Post, new { id = "form1", @class = "formular", style = "width:300px; margin:0 auto; " }))
